<Window x:Class="BCRA.Revit.SelectAskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Place View On..." Height="200" Width="350" ResizeMode="NoResize">
    <Canvas>
        <Label Content="Specify an ASK on which to place the view" Canvas.Left="8" Canvas.Top="10" Foreground="#FF9C886A"/>
        <Separator Height="15" Canvas.Left="10" Margin="0" Canvas.Top="30" Width="324"/>
        <ComboBox x:Name="comboBoxSelectAsk" Canvas.Left="104" Canvas.Top="50" Width="177"/>
        <Label Content="ASK:" Canvas.Left="10" Canvas.Top="50" Width="68" HorizontalContentAlignment="Right"/>
        <Button x:Name="buttonCancel" Content="Cancel" Canvas.Left="248" Canvas.Top="124" Width="75" Click="buttonCancel_Click"/>
        <Button x:Name="buttonOk" Content="OK" Canvas.Left="151" Canvas.Top="124" Width="75" Click="buttonOk_Click"/>
    </Canvas>
</Window>
