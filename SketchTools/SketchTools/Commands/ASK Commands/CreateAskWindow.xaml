<Window x:Class="BCRA.Revit.CreateASKWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New ASK Sheet" Height="200" Width="350" ResizeMode="NoResize" Loaded="WindowLoaded">
    <Canvas>
        <Label x:Name="messageLabel" Content="Enter Sheet Size and Number of ASK" Height="28" Canvas.Left="11" Canvas.Top="6" Width="321" Foreground="#FF9C886A"/>
        <Separator Height="15" Canvas.Left="10" Margin="0" Canvas.Top="30" Width="324"/>
        <Label Content="Sheet Size:" Canvas.Left="11" Canvas.Top="54" HorizontalContentAlignment="Right" Width="88"/>
        <ComboBox x:Name="comboBoxSheetSize" Canvas.Left="104" Canvas.Top="54" Width="158"/>
        <Label Content="ASK Number:" Height="29" Canvas.Left="11" Canvas.Top="87" Width="88" HorizontalContentAlignment="Right"/>
        <Button x:Name="btnCancel" Content="Cancel" Canvas.Left="252" Canvas.Top="132" Width="75" Height="26" RenderTransformOrigin="0.44,0.769" Click="btnCancel_Click" IsCancel="True"/>
        <Button x:Name="btnCreate" Canvas.Left="159" Canvas.Top="132" Width="75" Height="26" Click="btnCreate_Click" IsDefault="True"/>
        <TextBox x:Name="txtBoxASKNumber" Height="23" Canvas.Left="104" TextWrapping="Wrap" Canvas.Top="89" Width="88" PreviewTextInput="txtBoxASKNumber_PreviewTextInput"/>
    </Canvas>
</Window>
